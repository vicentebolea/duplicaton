[Unit]
Description=Backup important system stuff
ConditionACPower=true
After=run-media-@USER@-@LABEL@.mount
Requires=run-media-@USER@-@LABEL@.mount

[Service]
Type=oneshot
Environment="DUPLICITY_OUTPUT=file:///run/media/@USER@/@LABEL@/system-backup"
ExecStart=/usr/local/bin/duplicity-backup-runner

[Install]
WantedBy=run-media-@USER@-@LABEL@.mount
